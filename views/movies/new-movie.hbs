<h2>Add a new movie</h2>

<form action="/movies/create" method="POST">
  <input type="text" name="title" id="" placeholder="title" />
  <br />
  <input type="text" name="genre" id="" placeholder="genre" />
  <br />
  <input type="text" name="plot" id="" placeholder="plot" />
  <br />

  <label for="cast">Select the Cast</label>

  <select name="cast" id="cast" multiple>
    {{#each allCele}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>

  <button type="submit">Save the movie</button>
</form>

<hr />
<a href="/"><button>Back to Home</button></a>