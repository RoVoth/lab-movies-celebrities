<h2>Edit the movie</h2>

<form method="POST" action="/movies/{{aMov._id}}/edit">

  <label for="title">Title:</label>
  <input type="text" name="title" id="" value="{{aMov.title}}" />
  <br />

  <label for="genre">Genre:</label>
  <input type="text" name="genre" id="" value="{{aMov.genre}}" />
  <br />

  <label for="plot">Plot:</label>
  <input type="text" name="plot" id="" value="{{aMov.plot}}" />
  <br />

  <label for="cast">Cast:</label>

  <select name="cast" id="cast" multiple>
    {{#each allCele}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>

  <button type="submit">Save the changes</button>
</form>
<hr />
<a href="/movies/{{aMov._id}}"><button>Back to movie</button></a>